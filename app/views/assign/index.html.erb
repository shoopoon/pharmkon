<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>研究室</th>
      <th>１人目</th>
      <th>２人目</th>
      <th>３人目</th>
      <th>４人目</th>
  </thead>
  <% @groups.each do |_, group| %>
    <tr>
      <td><%= link_to group.labo.name, assign_path(group.labo.id) %></td>
      <% (0..3).each do |n| %>
        <% user = group.users[n] %>
        <% if user.nil? %>
          <td></td>
        <% else %>
          <% if user.department == 1 %>
            <td class="btn-success"><%= group.users[n].try(:name) rescue nil %></td>
          <% else %>
            <td class="btn-warning"><%= group.users[n].try(:name) rescue nil %></td>
          <% end %>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>

<%= content_for :sidebar do %>
  <%= render partial: "sidebar" %>
<% end %>
