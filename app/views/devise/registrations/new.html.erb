<h4>アカウント登録</h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label "学生証番号" %>
  <%= f.text_field :student_id, :autofocus => true %>
  <span class="help-inline" style="font-size: small; color: gray;">下4桁を入力してください</span>
  </div>

  <div><%= f.label "名前" %>
  <%= f.text_field :name %></div>

  <div><%= f.label "学科" %>
  <%= f.select :department, options_for_select(User::DEPARTMENT) %></div>

  <div><%= f.label "順位" %>
  <%= f.number_field :rank, :min => 1, :max => 99 %></div>

  <div><%= f.label "パスワード" %>
  <%= f.password_field :password %></div>

  <div><%= f.label "パスワード確認" %>
  <%= f.password_field :password_confirmation %></div>

<div><%= f.submit "登録", :class => "btn btn-primary" %></div>
<% end %>
