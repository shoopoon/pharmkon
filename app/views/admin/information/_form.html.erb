<%= form_for @information, :url => url, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :posted_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :posted_at, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :enable, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :enable, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_information_index_path, :class => 'btn' %>
  </div>
<% end %>
