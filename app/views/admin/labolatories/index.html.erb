<%- model_class = Labolatory -%>
<div class="page-header">
  <h1>研究室一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>研究室名</th>
      <th>薬学科定員</th>
      <th>薬科学科定員</th>
      <th>合計定員</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @labolatories.each do |labolatory| %>
      <tr>
        <td><%= link_to labolatory.id, admin_labolatory_path(labolatory) %></td>
        <td><%= labolatory.name %></td>
        <td><%= labolatory.yaku %>人</td>
        <td><%= labolatory.yakka %>人</td>
        <td><%= labolatory.total %>人</td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_labolatory_path(labolatory), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_labolatory_path(labolatory),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_labolatory_path,
            :class => 'btn btn-primary' %>
