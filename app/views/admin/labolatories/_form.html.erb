<%= form_for @labolatory, :url => url, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :yaku, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :yaku, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :yakka, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :yakka, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :total, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_labolatories_path, :class => 'btn' %>
  </div>
<% end %>
